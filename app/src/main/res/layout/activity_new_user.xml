<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.stormhoebe.busy.NewUserActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/newUserHeaderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, New User"
        android:textSize="24sp"
        android:textAlignment="center"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="87dp" />

    <TextView
        android:id="@+id/newUserHeaderTextView2"
        android:layout_width="294dp"
        android:layout_height="57dp"
        android:textAlignment="center"
        android:text="Just a few questions and you'll be making business partners in no time."
        tools:layout_editor_absoluteY="65dp"
        tools:layout_editor_absoluteX="45dp" />

    <EditText
        android:id="@+id/imageEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Image URL"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.503" />

    <EditText
        android:id="@+id/typeEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Type of Business"

        android:inputType="textPersonName"
        android:layout_marginBottom="-1dp"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.503" />

    <EditText
        android:id="@+id/locationEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Location"

        android:inputType="textPersonName"
        android:layout_marginBottom="-8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.503" />

    <Button
        android:id="@+id/continueButton"
        android:layout_width="355dp"
        android:layout_height="59dp"
        android:text="Continue to Needs and Offers"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.538" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="224dp"
        android:layout_height="38dp"
        android:text="Leave black for stock image"
        android:textSize="11sp"
        android:layout_marginBottom="13dp"
        app:layout_constraintBottom_toTopOf="@+id/continueButton"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.548" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="224dp"
        android:layout_height="38dp"
        android:text="Street Address, City, State, Zip Code"
        android:textSize="11sp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/imageEditText"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.548" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="215dp"
        android:layout_height="40dp"
        android:text='Short and sweet such as: "Coffee Shop" or "Marketing Agency"'
        android:textSize="11sp"
        android:layout_marginBottom="-7dp"
        app:layout_constraintBottom_toTopOf="@+id/locationEditText"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.503" />

</android.support.constraint.ConstraintLayout>
